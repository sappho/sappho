<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>uk.org.sappho.pom</groupId>
	<artifactId>sappho</artifactId>
	<version>1-SNAPSHOT</version>
	<name>Sappho Root POM</name>

	<scm>
		<connection>scm:git:https://github.com/andrewheald/sappho.git</connection>
	</scm>

	<distributionManagement>
		<repository>
			<id>sappho.deploy</id>
			<name>Sappho Releases</name>
			<url>https://heald.co.uk/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>sappho.deploy</id>
			<name>Sappho Snapshots</name>
			<url>https://heald.co.uk/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.2</version>
				<executions>
					<execution>
						<id>generate-source-jar</id>
						<phase>install</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.8</version>
			</plugin>
		</plugins>
	</build>

</project>
